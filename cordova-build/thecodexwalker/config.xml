<?xml version='1.0' encoding='utf-8'?>
<widget id="com.chenxing.thecodexwalker" version="1.4.0" android-versionCode="14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>万象行者 - 内容验证版</name>
    <description>一款沉浸式互动小说游戏，体验精彩的故事情节和多媒体内容</description>
    <author email="chenxing3060@gmail.com" href="https://github.com/chenxing3060">
        ChenXing
    </author>
    <content src="index.html" />
    
    <!-- 全局配置 -->
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xff000000" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    
    <!-- 网络访问权限 -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Android平台配置 -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- 使用默认图标和启动画面 -->
        
        <!-- Android特定配置 -->
        <preference name="android-minSdkVersion" value="21" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="android-buildToolsVersion" value="33.0.2" />
        <preference name="android-compileSdkVersion" value="33" />
        
        <!-- 硬件加速 -->
        <preference name="android-hardwareAccelerated" value="true" />
        
        <!-- 文件访问权限 -->
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        
        <!-- 网络安全配置 -->
        <preference name="AndroidNetworkSecurityConfig" value="true" />
        
        <!-- 屏幕方向锁定 -->
        <preference name="orientation" value="portrait" />
        
        <!-- 状态栏配置 -->
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="blacktranslucent" />
    </platform>
    
    <!-- 访问权限 -->
    <access origin="*" />
    <allow-navigation href="*" />
    
    <!-- Cordova插件 -->
    <plugin name="cordova-plugin-file" spec="^8.0.0" />
    <plugin name="cordova-plugin-device" spec="^2.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />
</widget>
